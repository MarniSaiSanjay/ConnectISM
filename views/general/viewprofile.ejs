<% layout('layout/boilerplate') %>
    <style>
        .card {
            position: relative;
            display: flex;
            flex-direction: column;
            background-color: #fff;
            border: 0 solid rgba(0, 0, 0, .125);
            border-radius: .25rem;
            padding: 20px;
        }

        .lab {
            width: 150px;
            text-align: left;
        }

        .text-secondary {
            width: 300px;
            text-align: left;
        }

        .fabb {
            float: right;
            padding-right: 15px;
        }

        .pro_img {
            height: 24vh;
            width: 24vh;
        }

        @media screen and (max-width:300px) {
            .pro_img {
                width: 90%;
                height: 90%;
            }
        }

        @media screen and (max-width:326px) {
            .details {
                font-size: 0.97rem;
            }
        }
    </style>

    <div class="container">
        <div class="row">

            <div class="col-lg-6 col-md-12 col-11 ms-auto me-auto col-sm-12 profile_sec card my-4">
                <!-- PRO PIC PRO  -->
                <img src="<%= user.profilePicUrl %>" alt="profilepic" style="border-radius: 50%;"
                    class="ms-auto me-auto card-img-top pro_img">
                <h2 class=" text-center">
                    <%= user.name %>
                        <% if(user.isAdmin){ %>
                            <img src="/styles/verified.png" alt="Verified" height="20px" width="20px"
                                style="border-radius: 50%;">
                            <% } %>
                </h2>

                <div class="mt-3">
                    <!-- DETAILS -->
                    <div class="row">
                        <div class="col-sm-3 lab">
                            <h5 class="mb-0">Full Name</h5>
                        </div>
                        <div class="col-sm-9 text-secondary fiel">
                            <h5>
                                <%= user.name %>
                            </h5>
                        </div>
                    </div>

                    <hr>

                    <div class="row">
                        <div class="col-sm-3 lab">
                            <h5 class="mb-0 ">Email</h5>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            <h5>
                                <%= user.email %>
                            </h5>
                        </div>
                    </div>

                    <hr>

                    <% if(user.degree !='undefined' ) { %>
                        <div class="row">
                            <div class="col-sm-3 lab">
                                <h5 class="mb-0 ">Degree</h5>
                            </div>
                            <div class="col-sm-9 text-secondary fiel">
                                <h5>
                                    <%= user.degree %>
                                </h5>
                            </div>
                        </div>
                        <hr>
                        <% } %>
                </div>


                <div class="row">
                    <div class="col-sm-3 lab">
                        <h5 class="mb-0 ">Contact</h5>
                    </div>
                    <% if(user.instagram !=='' || user.facebook!=='' || user.twitter!=='' ){ %>
                        <div class="col-sm-9 text-secondary row fiel">
                            <%# console.log(user); %>
                                <div style="display: flex; flex-direction: row;">
                                    <% if(user.instagram!=='' ){ %> <a href="<%= user.instagram %>" class="col-1"> <i
                                                class="fab fabb fa-instagram fa-2x "
                                                style="color: #ac47c5; width: 30%;"></i> </a>
                                        <% } %>

                                            <% if(user.facebook !=='' ) {%> <a href="<%= user.facebook %>"
                                                    class="col-4"> <i class="fab fabb fa-facebook-f fa-2x "
                                                        style="color: #1778F2; width: 30%;"></i> </a>
                                                <% } %>

                                                    <% if(user.twitter!=='' ) {%> <a href="<%= user.twitter %>"
                                                            class="col-4"> <i class="fab fabb fa-twitter fa-2x "
                                                                style="color: #00ACEE; width: 30%;"></i> </a>
                                                        <% } %>
                                </div>


                        </div>
                        <% }else{ %>
                            <div class="col-sm-9 text-secondary row fiel">
                                <h5 class="details">--Details not updated--</h5>
                            </div>
                            <% } %>
                </div>

            </div>
        </div>
    </div>